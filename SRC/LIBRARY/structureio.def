.ifndef IO_OPEN_INP

;Operations
.define IO_OPEN_INP         ,-1     ;Open for input
.define IO_OPEN_UPD         ,-2     ;Open for update
.define IO_FIND             ,1      ;Find a record
.define IO_READ_FIRST       ,2      ;Read first record
.define IO_READ             ,3      ;Read specific record (by key)
.define IO_READ_NEXT        ,4      ;Read next record
.define IO_CREATE           ,5      ;Create new record
.define IO_DELETE           ,6      ;Delete record
.define IO_UPDATE           ,7      ;Update record
.define IO_UNLOCK           ,8      ;Unlock channel
.define IO_CLOSE            ,9      ;Close channel
.define IO_READ_PREV        ,10     ;Read previous record
.define IO_READ_LAST        ,11     ;Read last record
.define IO_SHOWERR          ,12     ;Show error
.define IO_FIND_FIRST       ,13     ;Find first record

;Options
.define IO_LOCK             ,1
.define IO_PARTIAL          ,1

;Return values
.define IO_OK               ,1      ;Operation was successful
.define IO_NOT_FOUND        ,-1     ;Operation resulted in a record not found error
.define IO_DUP_KEY          ,-2     ;Operation resulted in a duplicate key error
.define IO_NO_CUR_REC       ,-3     ;Operation resulted in a no current record error
.define IO_EOF              ,-4     ;Operation resulted in an end of file error
.define IO_LOCKED           ,-5     ;Operation resulted in a record locked error
.define IO_FATAL            ,-9     ;Operation resulted in a fatal error

.endc